<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-6">
    <h3>Search Result</h3>
    <%= render 'shared/feed' %>
  </div>
  <div class="col-md-3">
    <h4>My Following</h4>
    <% if @users.any? %>
      <div class="user_avatars">
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, size: 40), user %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>