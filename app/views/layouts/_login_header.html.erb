<div class="navbar navbar-default navbar-fixed-top" style="" draggable="true">
	<div class="container">
        <div class="navbar-header">
          <%= link_to image_tag("logo_1_3756768155.gif", alt: "Logo" ), '#', class:'navbar-brand' %>
        </div>
        <%= form_for :session, url: login_path, :html => {class: "navbar-form navbar-right", role:"login", id:'loginForm'} do |f| %>

              <div class="form-group">
              <%= f.label :email, 'Email', class:"control-label" %>
              <%= f.email_field :email, class: 'form-control', placeholder:"john@gmail.com" %>
              <%= f.label :password, 'Password', class:"control-label" %>
              (<%= link_to "forgot password?", new_password_reset_path %>)
              <%= f.password_field :password, class: 'form-control', placeholder:"Password" %>
              <%= f.label :remember_me, class: "control-label" do %>
                <%= f.check_box :remember_me %>
                <span>Remember me?</span>
              <% end %>
              </div>
            <%= f.submit "Log in", class: "btn btn-primary" %>
            
        <% end %>
	</div><!-- end container -->
</div><!-- end navbar -->