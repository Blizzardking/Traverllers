<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user), micropost.user %>
  <span class="user"><%= link_to micropost.user.firstname, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if params[:action] == "show" && current_user?(micropost.user) %>
      <%= link_to "edit", "/microposts/#{micropost.id}/edit", remote: true %> |
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "Are you sure?" } %>
    <% elsif current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "Are you sure?" } %>
    <% end %>
  </span>
  
</li>