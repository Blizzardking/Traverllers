    <div class="col-md-6">
      <div id='new_micropost'> 
      </div>
      <% if @user.microposts.any? %>
        <h3>News(<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
  
</div>

